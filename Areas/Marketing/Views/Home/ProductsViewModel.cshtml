@using Semana02DPA_MVC.Areas.Marketing.Models
@model IEnumerable<Product>

<h1>Products with ViewModel</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Description</th>
            <th>Title</th>
            <th>Maker</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Description</td>
                <td>
                    <a href="@item.Url" target="_blank">@item.Title</a>
                </td>
                <td>@item.Maker</td>
                <td>
                    <img src="@item.Img" style="height:40px;width:40px;" alt="@item.Title" />
                </td>
            </tr>
        }   
    </tbody>
</table>